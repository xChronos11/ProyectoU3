@{
    ViewBag.Title = "Contact";
}
<h2>Contacto</h2>

<h2 class="text-center">Contactanos</h2>
<div class="container ">
   
        <div class="">

            <div class="form-group">
                <span class="col-md-1"><i class="fa fa-user bigicon" ></i></span>
                <div class="col-md-12">
                    <input id="fname" name="name" type="text" placeholder="Nombre" class="form-control">
                </div>
            </div>
            <div class="form-group">
                <span class="col-md-1 "><i class="fa fa-user bigicon"></i></span>
                <div class="col-md-12">
                    <input id="lname" name="name" type="text" placeholder="Apellido" class="form-control">
                </div>
            </div>

            <div class="form-group">
                <span class="col-md-1"><i class="fa fa-envelope bigicon"></i></span>
                <div class="col-md-12">
                    <input id="email" name="email" type="text" placeholder="Correo" class="form-control">
                </div>
            </div>

            <div class="form-group">
                <span class="col-md-1"><i class="fa fa-phone-square bigicon"></i></span>
                <div class="col-md-12">
                    <input id="phone" name="phone" type="text" placeholder="Telefono" class="form-control">
                </div>
            </div>

            <div class="form-group">
                <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-pencil-square-o bigicon"></i></span>
                <div class="col-md-12">
                    <textarea class="form-control" id="message" name="message" placeholder="Escribanos su mensaje." rows="7"></textarea>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-12 text-center">
                    <button type="submit" class="btn btn-primary btn-dark">Enviar</button>
                </div>
            </div>
        </div>
    </div>
</div>