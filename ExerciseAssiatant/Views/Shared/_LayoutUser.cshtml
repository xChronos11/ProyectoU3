<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    
    <div class="row" id="principal">
        <div class="col-md-3 bg-light position-fixed h-100" id="aside">

            <div class="circle-img rounded-circle mx-auto mt-5"></div>

            <div class="container pt-3">
                <h5 class="text-white text-center">User name</h5>

                <ul class="list-group list-group-flush mt-3">
                    <li class="list-group-item"><a href="#" class="text-white">opt 1</a></li>
                    <li class="list-group-item"><a href="#" class="text-white">opt 2</a></li>
                    <li class="list-group-item"><a href="#" class="text-white">opt 3</a></li>
                    <li class="list-group-item"><a href="#" class="text-white">opt 4</a></li>
                </ul>
            </div>

            <div class="text-center font-weight-light text-white-50 mt-5">
                Copyright &copy; Exercise Assistant @DateTime.Now.Year
            </div>

        </div>

        <div class="offset-3 col-md-9 bg-light container">
            
            <div class="p-5 pb-3">
                <h1>@ViewBag.Title</h1>
            </div>

            <div class="container pl-5 pr-5">
                @RenderBody()
            </div>

        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
